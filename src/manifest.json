{
	
	"manifest_version": 2,
	
	"name": "Granny's Browser",
	"description": "Browse the web like your granny does!",
	"version": "0.0.1",
	
	"browser_action": {
		
		"default_icon": "icon.png",
		"default_popup": "popup.html"
		
	},
	
	"permissions": [
		
		"tabs",
		"*://*/*"
		
	],
	
	"background": {
		
		"persistent": false,
		"scripts": ["granny-redir.js"]
		
	},
	
	"content_scripts": [
		
		{
			"matches": ["*://*/*"],
			"js": ["granny.js"],
			"run_at": "document_start"
		}
		
	]
	
}
